{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    /* Module Resolution Options */
    "baseUrl": "./src",
    "paths": {
      "@design": ["./styling"]
    }
  },
  "exclude": [
    "node_modules",
    ".firebaserc",
    "firebase.json",
    "firebase",
    "gatsby-config.js", 
  ]
}
